<Application x:Class="LogMonitoringApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 전역 리소스 관리: 모든 스타일/테마를 ResourceDictionary.xaml에서 관리 -->
                <ResourceDictionary Source="pack://application:,,,/LogMonitoringApp;component/Resources/ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>