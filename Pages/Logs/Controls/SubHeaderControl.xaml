<UserControl x:Class="LogMonitoringApp.Pages.Logs.Controls.SubHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" HorizontalAlignment="Stretch">
    <Grid Background="White" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 좌측 버튼 영역 -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
            <TextBlock Text="[0개 선택됨]" VerticalAlignment="Center" Margin="0,0,10,0"
                     FontSize="14"/>

            <!-- Filled 스타일 버튼들 -->
            <Button Content="다운로드" Width="90" Margin="0,0,10,0" Background="#1890FF" Foreground="White"
                   BorderThickness="0" Height="34"/>
            <Button Content="내보내기" Width="90" Background="#1890FF" Foreground="White"
                   BorderThickness="0" Height="34"/>
        </StackPanel>

        <!-- 우측 페이지네이션 영역 -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,20,0">
            <TextBlock Text="179 페이지 중" VerticalAlignment="Center" Margin="0,0,10,0"
                     FontSize="14"/>

            <ComboBox Width="60" Height="34" VerticalAlignment="Center" Margin="0,0,5,0">
                <ComboBoxItem Content="1"/>
            </ComboBox>

            <TextBlock Text="페이지" VerticalAlignment="Center" Margin="0,0,10,0"
                     FontSize="14"/>

            <!-- 페이지 이동 아이콘 버튼 -->
            <Button Width="34" Height="34" Margin="0,0,5,0" Background="Transparent" BorderThickness="0">
                <Grid>
                    <!-- 페이지 이전 버튼 아이콘 (◀) -->
                    <Path Data="M12,20L4,12L12,4" Stroke="#333333" StrokeThickness="2" 
                        VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" Width="14"/>
                </Grid>
            </Button>

            <Button Width="34" Height="34" Background="Transparent" BorderThickness="0">
                <Grid>
                    <!-- 페이지 다음 버튼 아이콘 (▶) -->
                    <Path Data="M4,20L12,12L4,4" Stroke="#333333" StrokeThickness="2" 
                        VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" Width="14"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>