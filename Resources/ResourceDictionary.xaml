<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <!-- 1. 색상 정의 - 가장 기본이 되는 요소 -->
        <ResourceDictionary Source="/Resources/Colors.xaml"/>

        <!-- 2. 크기와 여백 정의 -->
        <ResourceDictionary Source="/Resources/Dimensions.xaml"/>

        <!-- 3. 폰트 관련 정의 -->
        <ResourceDictionary Source="/Resources/Typography.xaml"/>

        <!-- 4. 컨트롤 템플릿 - 스타일보다 먼저 로드되어야 함 -->
        <ResourceDictionary Source="/Resources/ControlTemplates.xaml"/>

        <!-- 5. 스타일 정의 - 템플릿을 참조하므로 마지막에 로드 -->
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>